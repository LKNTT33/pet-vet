<h1>My Appointments</h1>

<% if @appointments.any? %>
  <ul>
    <% @appointments.each do |appointment| %>
      <li>
        <strong>Vet:</strong> <%= appointment.availability.user.first_name %> <%= appointment.availability.user.last_name %><br>
        <strong>Pet:</strong> <%= appointment.pet.name %> (<%= appointment.pet.species %>)<br>
        <strong>Date:</strong> <%= appointment.slot_start.strftime("%A, %d %B %Y") %><br>
        <strong>Time:</strong> <%= appointment.slot_start.strftime("%H:%M") %> - <%= appointment.slot_end.strftime("%H:%M") %><br>
        <strong>Status:</strong> <%= appointment.status %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You donâ€™t have any appointments yet.</p>
<% end %>
