<h2>Edit My Profile</h2>

<%= simple_form_for(@user, url: user_path(@user), method: :patch) do |f| %>
  <%= f.input :email %>
  <%= f.input :city %>
  <%= f.input :phone %>

  <!-- Centered button -->
  <div class="d-flex justify-content-center mt-3">
    <%= f.button :submit, "Save Changes", class: "btn btn-success" %>
  </div>
<% end %>

<!-- Centered back link -->
<div class="d-flex justify-content-center mt-2">
  <%= link_to "Back to Profile", user_path(@user), class: "btn btn-secondary" %>
</div>
