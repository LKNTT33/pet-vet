<h2>My Profile</h2>

<p><strong>Email:</strong> <%= @user.email %></p>
<p><strong>City:</strong> <%= @user.city %></p>
<p><strong>Phone:</strong> <%= @user.phone %></p>

<%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>

<h3>My Pets</h3>
<% if @pets.any? %>
  <ul>
    <% @pets.each do |pet| %>
      <li><%= pet.name %> - <%= pet.species %> (Age: <%= pet.age %>)</li>
    <% end %>
  </ul>
<% else %>
  <p>No pets yet.</p>
<% end %>

<h3>My Appointments</h3>
<% if @appointments.any? %>
  <ul>
    <% @appointments.each do |appt| %>
      <li>
        <%= appt.availability.start_time.strftime("%d/%m/%Y %H:%M") %> -
        <%= appt.pet.name %> with Vet <%= appt.availability.user.email %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No appointments yet.</p>
<% end %>

